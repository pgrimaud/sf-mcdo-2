{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <!-- ======= Whu Us Section ======= -->
    <section id="why-us" class="why-us">
        <div class="container">

            <div class="section-title">
                <h2>This product <span>is available here :</span></h2>
                <p>Ut possimus qui ut temporibus culpa velit eveniet modi omnis est adipisci expedita at voluptas atque vitae autem.</p>
            </div>

            <div class="row">
                {% for productRestaurant in product.productRestaurants %}
                    <div class="col-lg-3">
                        <div class="box">
                            <span>{{ loop.index }}</span>
                            <h4>{{ productRestaurant.restaurant.name }}</h4>
                            {% if productRestaurant.stock < 150 %}
                                <p>Low stock!!!!</p>
                            {% else %}
                                <p>{{ productRestaurant.stock }} available</p>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
    </section><!-- End Whu Us Section -->
{% endblock %}
